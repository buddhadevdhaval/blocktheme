{
    "$schema": "https://schemas.wp.org/trunk/block.json",
    "apiVersion": 3,
    "name": "ambrygen/ai-health-hero",
    "title": "AI Health Hero",
    "category": "design",
    "icon": "heart",
    "description": "Hero section with AI healthcare visuals, stats counters, and flexible media placement.",
    "supports": {
        "html": false,
        "spacing": {
            "margin": true,
            "padding": true
        },
        "__experimentalLayout": {
            "allowSwitching": false,
            "allowInheriting": false
        }
    },
    "attributes": {
        "heading": { 
            "type": "string", 
            "default": "Transforming Healthcare with AI Innovation" 
        },
        "content": { 
            "type": "string", 
            "default": "Leveraging artificial intelligence to revolutionize patient care, diagnostics, and medical research." 
        },
        "counters": {
            "type": "array",
            "default": [
                {
                    "number": "100",
                    "prefix": "",
                    "suffix": "",
                    "label": "Publications"
                },
                {
                    "number": "50",
                    "prefix": "",
                    "suffix": "+",
                    "label": "Partners"
                },
                {
                    "number": "",
                    "prefix": "",
                    "suffix": "",
                    "label": ""
                },
                {
                    "number": "",
                    "prefix": "",
                    "suffix": "",
                    "label": ""
                }
            ]
        },
        "imageTop": { 
            "type": "string", 
            "default": "" 
        },
        "imageTopId": { 
            "type": "number", 
            "default": 0 
        },
        "imageTopAlt": { 
            "type": "string", 
            "default": "" 
        },
        "imageBottom": { 
            "type": "string", 
            "default": "" 
        },
        "imageBottomId": { 
            "type": "number", 
            "default": 0 
        },
        "imageBottomAlt": { 
            "type": "string", 
            "default": "" 
        },
        "logoImage": { 
            "type": "string", 
            "default": "" 
        },
        "logoImageId": { 
            "type": "number", 
            "default": 0 
        },
        "logoImageAlt": { 
            "type": "string", 
            "default": "" 
        }
    },
    "editorScript": "file:./index.js",
	"editorStyle": "file:./index.css",
	"style": "file:./style-index.css",
    "textdomain": "ambrygen-web",
    "viewScript": "file:./view.js"
}
