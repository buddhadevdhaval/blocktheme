{
  "name": "ambrygen",
  "version": "1.0.0",
  "theme-version": "2.2.3",
  "description": "A WordPress custom theme",
  "author": "Ambrygen",
  "license": "GPL-2.0-or-later",
  "engines": {
    "node": ">=20.10.0",
    "npm": ">=10.2.3"
  },
  "scripts": {
    "create:block": "node ./bin/create-block.js",
    "build": "npm run build:prod",
    "build:prod": "wp-scripts build --blocks-manifest",
    "build:blocks": "wp-scripts build --config ./node_modules/@wordpress/scripts/config/webpack.config.js --webpack-src-dir=./assets/src/blocks/ --output-path=./assets/build/blocks/",
    "start": "wp-scripts start --blocks-manifest",
    "lint:css": "wp-scripts lint-style",
    "lint:js": "wp-scripts lint-js",
    "lint:php": "if [ -d vendor ]; then vendor/bin/phpcs --standard=WordPress-VIP; else echo 'PHP CodeSniffer not installed - run composer install'; fi",
    "lint:css-fix": "wp-scripts lint-style --fix",
    "lint:js-fix": "wp-scripts lint-js --fix",
    "format": "wp-scripts format",
    "phpcs:report": "if [ -d vendor ]; then vendor/bin/phpcs --standard=WordPress-VIP --report=summary; else echo 'PHP CodeSniffer not installed - run composer install'; fi",
    "phpcs:fix": "if [ -d vendor ]; then vendor/bin/phpcbf --standard=WordPress-VIP; else echo 'PHP CodeSniffer not installed - run composer install'; fi",
    "test:php": "if [ -d vendor ]; then vendor/bin/phpunit; else echo 'PHPUnit not installed - run composer install'; fi",
    "setup": "npm install && composer install",
    "npm:install": "npm install",
    "composer:clean": "composer install --no-dev"
  },
  "devDependencies": {
    "@wordpress/compose": "^7.0.0",
    "@wordpress/create-block": "^4.80.0",
    "@wordpress/dom-ready": "^4.0.0",
    "@wordpress/icons": "^11.4.0",
    "@wordpress/scripts": "^31.2.0",
    "copy-webpack-plugin": "^13.0.1",
    "eslint-plugin-html": "^8.1.1",
    "html-loader": "^5.0.0",
    "mini-css-extract-plugin": "^2.9.0",
    "remove-files-webpack-plugin": "^1.5.0",
    "stylelint-config-standard-scss": "^16.0.0"
  },
  "dependencies": {
    "@wordpress/i18n": "^6.10.0"
  }
}
